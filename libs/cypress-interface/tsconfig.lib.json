{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true, 
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "cypress"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
